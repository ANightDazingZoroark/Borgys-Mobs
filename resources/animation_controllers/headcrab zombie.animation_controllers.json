{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.headcrab_zombie_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"moving": "query.ground_speed > 0"
						}
					]
				},
                "moving": {
                    "animations": [
                        "animMove"
                    ],
                    "transitions": [
						{
							"default": "query.ground_speed == 0"
						}
					]
                }
			}
		},
        "controller.animation.headcrab_zombie_attack": {
            "initial_state": "default",
			"states": {
				"default": {
                    "transitions": [
                        {
                            "attack": "variable.attack_time"
                        }
                    ]
				},
                "attack": {
                    "animations": [
                        "animAttack"
                    ],
                    "transitions": [
                        {
                            "default": "!variable.attack_time"
                        }
                    ]
                }
			}
        },
        "controller.animation.piglin_headcrab_zombie_shake": {
            "initial_state": "default",
			"states": {
				"default": {
                    "transitions": [
                        {
                            "attack": "query.is_sheared"
                        }
                    ]
				},
                "attack": {
                    "animations": [
                        "animShake"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_sheared"
                        }
                    ]
                }
			}
        },
        "controller.animation.evoker_headcrab_zombie_special": {
            "initial_state": "default",
			"states": {
				"default": {
                    "transitions": [
                        {
                            "summon": "query.is_casting"
                        },
                        {
                            "knockback": "query.is_roaring"
                        }
                    ]
				},
                "summon": {
                    "animations": [
                        "animSummon"
                    ],
                    "particle_effects" : [
						{
							"effect" : "spell",
							"locator" : "left_hand"
						},
						{
							"effect" : "spell",
							"locator" : "right_hand"
						}
					],
                    "transitions": [
                        {
                            "default": "!query.is_casting"
                        },
                        {
                            "knockback": "query.is_roaring"
                        }
                    ]
                },
                "knockback": {
                    "animations": [
                        "animKnockback"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_roaring"
                        },
                        {
                            "summon": "query.is_casting"
                        }
                    ]
                }
			}
        },
        "controller.animation.scorched_headcrab_zombie_sizzle": {
			"initial_state": "default",
			"states": {
				"default": {
                    "animations": [
                        {
                            "animFire": "!query.is_in_water"
                        },
                        {
                            "animSizzle": "query.is_in_water"
                        }
                    ]
				}
			}
		}
    }
}