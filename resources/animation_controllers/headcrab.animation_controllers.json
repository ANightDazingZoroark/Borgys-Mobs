{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.headcrab_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animIdle": "query.ground_speed == 0"
						},
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
                    "transitions": [
                        {
                            "attack": "!query.is_on_ground"
                        }
                    ]
				},
                "attack": {
                    "animations": [
                        "animJump"
                    ],
                    "transitions": [
                        {
                            "default": "query.is_on_ground"
                        }
                    ]
                }
			}
		},
        "controller.animation.scorched_headcrab_sizzle": {
			"initial_state": "default",
			"states": {
				"default": {
                    "animations": [
                        {
                            "animScorchedHeadcrabFire": "!query.is_in_water"
                        },
                        {
                            "animScorchedHeadcrabSizzle": "query.is_in_water"
                        }
                    ]
				}
			}
		}
    }
}