{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.player_headcrab_attack": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "attacking": "variable.attack_time && !query.is_riding"
                        }
                    ]
                },
                "attacking": {
                    "on_entry": [
                        "@s borgy:into_headcrab_zombie"
                    ]
                }
            }
        }
    }
}