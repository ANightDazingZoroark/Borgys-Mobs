{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.player_control_icthyosaur": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "controlling": "query.is_in_water && (query.is_riding ? (query.get_ride -> query.owner_identifier) == 'borgy:icthyosaur') && (query.is_riding ? (query.get_ride -> query.is_saddled))"
                        }
                    ]
                },
                "controlling": {
                    "animations": [
                        "animControlIcthyosaur"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_riding || !query.is_in_water"
                        }
                    ]
                }
            }
        },
        "controller.animation.player_control_icthyosaur_bite": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "biting": "query.is_jumping && query.is_riding ? (query.get_ride -> query.owner_identifier) == 'borgy:icthyosaur'"
                        }
                    ]
                },
                "biting": {
                    "animations": [
                        "animControlIcthyosaurBite"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_jumping || !query.is_riding"
                        }
                    ],
                    "on_entry": [
                        "/event entity @e[type=borgy:icthyosaur, tag=icthyosaurSaddled, c=1] borgy:icthyosaur_forced_bite"
                    ],
                    "on_exit": [
                        "/event entity @e[type=borgy:icthyosaur, tag=icthyosaurSaddled, c=1] borgy:icthyosaur_stop_forced_bite"
                    ]
                }
            }
        },
        "controller.animation.player_control_bakunawa": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "controlling": "(query.is_riding ? (query.get_ride -> query.owner_identifier) == 'borgy:bakunawa') && (query.is_riding ? (query.get_ride -> query.is_saddled))"
                        }
                    ]
                },
                "hoveringTransition": {
                    "transitions": [
                        {
                            "hovering": "!query.is_jumping"
                        },
                        {
                            "default": "!query.is_riding"
                        }
                    ],
                    "on_exit": [
                        "@s borgy:clear_bakunawa_effects"
                    ]
                },
                "hovering": {
                    "animations": [
                        "animStayBakunawa"
                    ],
                    "transitions": [
                        {
                            "controllingTransition": "query.is_jumping"
                        },
                        {
                            "default": "!query.is_riding"
                        }
                    ],
                    "on_entry": [
                        "/event entity @e[type=borgy:bakunawa, c=1, tag=bakunawaHasRider] borgy:on_hover",
                        "@s borgy:clear_bakunawa_effects_two",
                        "/tellraw @p {\"rawtext\":[{\"text\":\"Currently in stay in place mode\"}]}"
                    ]
                },
                "controllingTransition": {
                    "transitions": [
                        {
                            "controlling": "!query.is_jumping"
                        },
                        {
                            "default": "!query.is_riding"
                        }
                    ]
                },
                "controlling": {
                    "animations": [
                        "animControlBakunawa"
                    ],
                    "transitions": [
                        {
                            "hoveringTransition": "query.is_jumping"
                        },
                        {
                            "default": "!query.is_riding"
                        }
                    ],
                    "on_entry": [
                        "/event entity @e[type=borgy:bakunawa, c=1, tag=bakunawaHasRider] borgy:on_stop_hovering",
                        "/tellraw @p {\"rawtext\":[{\"text\":\"Currently in fly mode\"}]}"
                    ]
                }
            }
        },
        "controller.animation.player_use_bakunawa_staff": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "using": "(query.is_riding ? (query.get_ride -> query.owner_identifier) == 'borgy:bakunawa') && (query.is_riding ? (query.get_ride -> query.is_saddled)) && query.get_equipped_item_name('main_hand') == 'bakunawa_staff' && query.is_using_item"
                        }
                    ]
                },
                "using": {
                    "transitions": [
                        {
                            "default": "!query.is_riding || query.get_equipped_item_name('main_hand') != 'bakunawa_staff' || !query.is_using_item"
                        }
                    ],
                    "on_entry": [
                        "/event entity @e[type=borgy:bakunawa, c=1, tag=bakunawaHasRider] borgy:force_use_breath_attack"
                    ],
                    "on_exit": [
                        "/event entity @e[type=borgy:bakunawa, c=1, tag=bakunawaHasRider] borgy:stop_force_use_breath_attack"
                    ]
                }
            }
        },
        "controller.animation.player_ride_bakunawa_with_heart": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "hasHeart": "(query.is_riding ? (query.get_ride -> query.owner_identifier) == 'borgy:bakunawa') && (query.is_riding ? (query.get_ride -> query.is_saddled)) && (query.is_riding ? (query.get_ride -> query.is_sheared))"
                        }
                    ]
                },
                "hasHeart": {
                    "animations": [
                        "animRideBakunawaWithHeart"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_riding || !(query.get_ride -> query.is_sheared)"
                        }
                    ]
                }
            }
        }
    }
}