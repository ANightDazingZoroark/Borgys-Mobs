{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.icthyosaur_forced_attack": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "forceAttack": "query.is_sheared"
                        }
                    ]
                },
                "forceAttack": {
                    "animations": [
						"animForcedAttack"
					],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                }
            }
        }
    }
}