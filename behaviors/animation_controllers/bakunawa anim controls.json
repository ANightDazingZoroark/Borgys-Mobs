{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.bakunawa_environment_sensor": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "in_water": "query.is_in_water"
                        },
                        {
                            "on_land_adult": "!query.is_in_water && !query.is_baby"
                        },
                        {
                            "on_land_baby": "!query.is_in_water && query.is_baby"
                        }
                    ]
                },
                "in_water": {
                    "on_entry": [
                        "@s borgy:is_in_water"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_in_water"
                        }
                    ]
                },
                "on_land_adult": {
                    "on_entry": [
                        "@s borgy:is_not_in_water_adult"
                    ],
                    "transitions": [
                        {
                            "default": "query.is_in_water || query.is_baby"
                        }
                    ]
                },
                "on_land_baby": {
                    "on_entry": [
                        "@s borgy:is_not_in_water_baby"
                    ],
                    "transitions": [
                        {
                            "default": "query.is_in_water || !query.is_baby"
                        }
                    ]
                }
            }
        }
    }
}