                                "subject": "other",
                                "value": false
                            },
							"event": "borgy:lose_invisibility",
							"target": "self"
						}
                    }
                ]
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "borgy:wild",
                        "borgy:invisible"
                    ]
                }
            },
            "borgy:on_tame": {
                "add": {
                    "component_groups": [
                        "borgy:tamed"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:wild",
                        "borgy:invisible",
                        "borgy:no_invisibility_countdown"
                    ]
                }
            },
            "borgy:lose_invisibility": {
                "add": {
                    "component_groups": [
                        "borgy:no_invisibility_countdown"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:invisible"
                    ]
                }
            },
            "borgy:return_to_invisibility": {
                "add": {
                    "component_groups": [
                        "borgy:invisible"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:no_invisibility_countdown"
                    ]
                }
            },
            "borgy:activate_tamed_invisibility": {
                "add": {
                    "component_groups": [
                        "borgy:tamed_invisibility",
                        "borgy:invisible"
                    ]
                }
            },
            "borgy:deactivate_tamed_invisibility": {
                "remove": {
                    "component_groups": [
                        "borgy:tamed_invisibility",
                        "borgy:invisible",
                        "borgy:no_invisibility_countdown"
                    ]
