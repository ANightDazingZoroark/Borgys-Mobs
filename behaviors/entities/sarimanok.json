{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "borgy:sarimanok",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "runtime_identifier": "minecraft:chicken"
        },
        "component_groups": {
            "borgy:give_rewards_and_cooldown": {
                "minecraft:is_sheared": {},
                "minecraft:timer": {
                    "time": 180,
                    "looping": false,
                    "time_down_event": {
                        "event": "borgy:can_be_fed_again",
                        "target": "self"
                    }
                }
            }
        },
        "components": {
            "minecraft:health": {
                "value": 20
            },
            "minecraft:type_family": {
                "family": [
                    "sarimanok",
                    "mob"
                ]
            },
            "minecraft:scale": {
                "value": 0.4
            },
            "minecraft:movement": {
                "value": 0.25
            },
            "minecraft:physics": {},
            "minecraft:pushable": {},
            "minecraft:navigation.walk": {
				"avoid_water": true,
				"avoid_damage_blocks": true
			},
            "minecraft:movement.generic": {},
            "minecraft:jump.static": {},
            "minecraft:behavior.hurt_by_target": {
                "priority": 3,
                "entity_types": {
                    "filters": {
                        "test": "is_family",
                        "subject": "other",
                        "operator": "!=",
                        "value": "forcedAttack"
                    }
                }
            },            
            "minecraft:loot": {
                "table": "loot_tables/sarimanok.loot.json"
            },
            "minecraft:mob_effect": {
                "effect_range": 1,
                "mob_effect": "wither",
                "effect_time": 45,
                "entity_filter": {
                    "test": "is_target",
                    "subject": "other",
                    "value": true
                }
            },
            "minecraft:behavior.panic": {
                "priority": 2,
                "speed_multiplier": 1.75
            },
            "minecraft:behavior.random_stroll": {
                "priority": 5
            },
            "minecraft:behavior.random_look_around": {
                "priority": 6
            },
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? Math.Random(3,6) : 0"
            },
            "minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					}
				]
			},
            "minecraft:interact": {
                "interactions": [
                    {
                        "on_interact": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    },
                                    {
                                        "test": "has_equipment",
                                        "domain": "hand",
                                        "subject": "other",
                                        "value": "borgy:sarimanok_food"
                                    },
                                    {
                                        "test": "has_component",
                                        "subject": "self",
                                        "operator": "!=",
                                        "value": "minecraft:is_sheared"
                                    }
                                ]
                            },
                            "event": "borgy:give_rewards",
                            "target": "self"
                        },
                        "use_item": true,
                        "play_sounds": "eat",
                        "interact_text": "action.interact.feed",
                        "spawn_items": {
                            "table": "loot_tables/sarimanok rewards.loot.json"
                        }
                    }
                ]
            }
        },
        "events": {
            "borgy:give_rewards": {
                "add": {
                    "component_groups": [
                        "borgy:give_rewards_and_cooldown"
                    ]
                },
                "run_command": {
                    "command": [
                        "summon borgy:sarimanok_experience_reward ~ ~+1 ~"
                    ]
                }
            },
            "borgy:can_be_fed_again": {
                "remove": {
                    "component_groups": [
                        "borgy:give_rewards_and_cooldown"
                    ]
                }
            }
        }
    }
}