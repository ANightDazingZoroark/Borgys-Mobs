{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "borgy:piglin_brute_headcrab_zombie",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "animations": {
                "contTestForNether": "controller.animation.piglin_headcrab_zombie_find_environment"
            },
            "scripts": {
                "animate": [
                    "contTestForNether"
                ]
            }
        },
        "component_groups": {
            "borgy:outside_of_nether": {
                "minecraft:is_sheared": {},
                "minecraft:timer": {
                    "time": 15,
                    "time_down_event": {
                        "event": "borgy:go_commit_die",
                        "target": "self"
                    }
                }
            },
            "borgy:default_targets": {
                "minecraft:behavior.nearest_attackable_target": {
                    "priority": 3,
                    "within_radius": 24,
                    "reselect_targets": true,
                    "entity_types": [
                        {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "mob"
                                    },
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "headcrabGeneral"
                                    },
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "headcrab_zombie_general"
                                    },
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "monster"
                                    }
                                ]
                            },
                            "max_dist": 24
                        },
                        {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    },
                                    {
                                        "test": "is_riding",
                                        "subject": "other",
                                        "value": false
                                    }
                                ]
                            },
                            "max_dist": 24
                        }
                    ]
                }
            },
            "borgy:attack_forced_attack_entity": {
                "minecraft:behavior.nearest_attackable_target": {
                    "priority": 3,
                    "within_radius": 24,
                    "reselect_targets": true,
                    "entity_types": [
                        {
                            "filters": {
                              "test": "is_family",
                              "subject": "other",
                              "value": "isForcedAttacking"
                            },
                            "max_dist": 24
                        }
                    ]
                },
                "minecraft:on_target_escape": {
                    "event": "borgy:no_force_attacked",
                    "target": "self"
                }
            },
			"borgy:drop_experience_from_forced_attack": {
			  	"minecraft:experience_reward": {
					"on_death": "Math.random(3,6)"
			  	}
			}
        },
        "components": {
            "minecraft:health": {
                "value": 20
            },
            "minecraft:attack": {
                "damage": 12
            },
            "minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
            "minecraft:collision_box": {
                "width": 0.6,
                "height": 1.9
            },
            "minecraft:movement": {
                "value": 0.25
            },
            "minecraft:type_family": {
                "family": [
                    "headcrab_zombie",
                    "piglin_headcrab_zombie",
                    "headcrab_zombie_general",
                    "mob"
                ]
            },
            "minecraft:physics": {},
            "minecraft:pushable": {},
			"minecraft:navigation.walk": {
				"avoid_water": true,
				"avoid_damage_blocks": true
			},
			"minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:behavior.random_stroll": {
                "priority": 6
            },
            "minecraft:behavior.mount_pathing": {
                "priority": 0,
                "speed_multiplier": 1,
                "target_dist": 0.0,
                "track_target": true
            },
            "minecraft:behavior.melee_attack": {
                "priority": 4,
                "reach_multiplier": 1.5
            },
            "minecraft:behavior.hurt_by_target": {
				"priority": 2,
                "entity_types": {
                    "filters": {
                        "all_of": [
                            {
                                "test": "is_family",
                                "subject": "other",
                                "operator": "!=",
                                "value": "headcrabGeneral"
                            },
                            {
                                "test": "is_family",
                                "subject": "other",
                                "operator": "!=",
                                "value": "headcrab_zombie_general"
                            },
                            {
                                "test": "is_family",
                                "subject": "other",
                                "operator": "!=",
                                "value": "sigbin"
                            },
                            {
                                "test": "is_family",
                                "subject": "other",
                                "operator": "!=",
                                "value": "forcedAttack"
                            }
                        ]
                    }
                }
			},
            "minecraft:behavior.avoid_mob_type": {
                "priority": 1,
                "entity_types": [
                    {
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "sigbin"
                        },
                        "max_dist": 10,
                        "walk_speed_multiplier": 1.5,
                        "sprint_speed_multiplier": 1.5
                    }
                ]
            },
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:nameable": {},
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? Math.Random(3,6) : 0"
            },
            "minecraft:despawn": {
                "despawn_from_distance": {}
            },
            "minecraft:rideable": {
                "seat_count": 1,
                "family_types": [
                  "headcrab_zombie",
                  "headcrab"
                ],
                "seats": [
                    {
                        "position": [
                            0, 
                            1.7, 
                            0.1
                        ]
                    }
                ]
            },
            "minecraft:addrider": {
                "entity_type": "borgy:headcrab_hitbox"
            },
            "minecraft:scheduler": {
                "scheduled_events": [
                    {
                        "filters": {
                            "test": "rider_count",
                            "operator": "==",
                            "value": 0
                        },
                        "event": "borgy:on_unridden",
                        "target": "self"
                    }
                ]
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "on_damage": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "has_damage",
                                        "subject": "self",
                                        "value": "fatal"
                                    },
									{
                                        "test": "is_family",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "forcedAttack"
                                    }
                                ]
                            },
                            "event": "borgy:leave_headcrab_behind",
                            "target": "self"
                        }
                    },
                    {
						"on_damage": {
							"filters": {
								"all_of": [
									{
								  		"test": "is_family",
								  		"subject": "other",
								  		"value": "forcedAttack"
									},
									{
								  		"test": "has_target",
								  		"subject": "self",
								  		"value": false
									},
									{
									  	"test": "has_damage",
									  	"subject": "self",
									  	"operator": "!=",
									  	"value": "fatal"
									}
							  	]
							},
							"event": "borgy:on_force_attacked",
							"target": "self"
						}
					},
					{
						"on_damage": {
							"filters": {
						  		"all_of": [
									{
							  			"test": "is_family",
							  			"subject": "other",
							  			"value": "forcedAttack"
									},
									{
							  			"test": "has_damage",
							  			"subject": "self",
							  			"value": "fatal"
									}
						  		]
							},
							"event": "borgy:on_force_attacked_death",
							"target": "self"
					  	}
					},
					{
					  	"on_damage": {
							"filters": {
						  		"test": "is_family",
						  		"subject": "other",
						  		"value": "sarcoSpinAttack"
							},
							"event": "borgy:hit_by_sarco_spin",
							"target": "self"
					  	}
					},
					{
						"on_damage": {
						  	"filters": {
								"test": "has_equipment",
								"subject": "other",
								"value": "rift:dimetrodon_frost_attack"
						  	},
						  	"event": "borgy:hit_by_frost_dimetrodon",
						  	"target": "self"
						}
					}
                ]
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "borgy:inside_nether",
                        "borgy:default_targets"
                    ]
                }
            },
            "borgy:on_unridden": {
                "run_command": {
                    "command": [
                        "kill @s"
                    ]
                }
            },
            "borgy:leave_headcrab_behind": {
                "run_command": {
                    "command": [
                        "summon borgy:headcrab"
                    ]
                }
            },
            "borgy:on_leave_nether": {
                "add": {
                    "component_groups": [
                        "borgy:outside_of_nether"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:inside_nether"
                    ]
                }
            },
            "borgy:on_return_to_nether": {
                "add": {
                    "component_groups": [
                        "borgy:inside_nether"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:outside_of_nether"
                    ]
                }
            },
            "borgy:go_commit_die": {
                "run_command": {
                    "command": [
                        "summon borgy:headcrab",
                        "kill @s"
                    ]
                }
            },
			"borgy:on_force_attacked": {
				"add": {
				  	"component_groups": [
						"borgy:attack_forced_attack_entity"
				  	]
				},
				"remove": {
				  	"component_groups": [
						"borgy:default_targets"
				  	]
				}
			},
			"borgy:no_force_attacked": {
                "add": {
                    "component_groups": [
                        "borgy:default_targets"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:attack_forced_attack_entity"
                    ]
                }
			},
			"borgy:hit_by_sarco_spin": {
				"run_command": {
					"command": [
						"effect @s slowness 30 2"
					]
				}
			},
			"borgy:hit_by_frost_dimetrodon": {
				"run_command": {
					"command": [
						"effect @s weakness 20 2",
						"effect @s slowness 20 2"
				  	]
				}
			},
			"borgy:on_force_attacked_death": {
			  	"add": {
					"component_groups": [
				  		"borgy:drop_experience_from_forced_attack"
					]
			  	},
                "run_command": {
                    "command": [
                        "summon borgy:headcrab"
                    ]
                }
			}
        }
    }
}