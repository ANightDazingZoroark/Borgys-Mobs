{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "borgy:scorched_headcrab_zombie",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            "borgy:not_in_water": {
                "minecraft:environment_sensor": {
                    "triggers": [
                        {
                            "filters": {
                                "test": "in_water",
                                "subject": "self",
                                "value": true
                            },
                            "event": "borgy:start_sizzling",
                            "target": "self"
                        },
                        {
                            "filters": {
                                "test": "rider_count",
                                "operator": "==",
                                "value": 0
                            },
                            "event": "borgy:on_unridden",
                            "target": "self"
                        }
                    ]
                }
            },
            "borgy:in_water": {
                "minecraft:damage_over_time": {
                    "damage_per_hurt": 1,
                    "time_between_hurt": 0
                },
                "minecraft:environment_sensor": {
                    "triggers": [
                        {
                            "filters": {
                                "test": "in_water",
                                "subject": "self",
                                "value": false
                            },
                            "event": "borgy:stop_sizzling",
                            "target": "self"
                        },
                        {
                            "filters": {
                                "test": "rider_count",
                                "operator": "==",
                                "value": 0
                            },
                            "event": "borgy:on_unridden",
                            "target": "self"
                        }
                    ]
                }
            }
        },
        "components": {
            "minecraft:health": {
                "value": 20
            },
            "minecraft:attack": {
                "damage": 7
            },
            "minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
            "minecraft:collision_box": {
                "width": 0.6,
                "height": 1.9
            },
            "minecraft:movement": {
                "value": 0.25
            },
            "minecraft:type_family": {
                "family": [
                    "scorched_headcrab_zombie",
                    "headcrab_zombie_general",
                    "mob"
                ]
            },
            "minecraft:physics": {},
            "minecraft:pushable": {},
			"minecraft:navigation.walk": {
				"avoid_water": true,
				"avoid_damage_blocks": true
			},
			"minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:equipment": {
                "table": "loot_tables/gear/scorched headcrab zombie weapon.json"
            },
            "minecraft:behavior.random_stroll": {
                "priority": 6
            },
            "minecraft:behavior.mount_pathing": {
                "priority": 0,
                "speed_multiplier": 1,
                "target_dist": 0.0,
                "track_target": true
            },
            "minecraft:behavior.melee_attack": {
                "priority": 4,
                "reach_multiplier": 1.5
            },
            "minecraft:behavior.hurt_by_target": {
				"priority": 2,
                "entity_types": {
                    "filters": {
                        "all_of": [
                            {
                                "test": "is_family",
                                "subject": "other",
                                "operator": "!=",
                                "value": "headcrabGeneral"
                            },
                            {
                                "test": "is_family",
                                "subject": "other",
                                "operator": "!=",
                                "value": "headcrab_zombie_general"
                            },
                            {
                                "test": "is_family",
                                "subject": "other",
                                "operator": "!=",
                                "value": "sigbin"
                            }
                        ]
                    }
                }
			},
            "minecraft:behavior.avoid_mob_type": {
                "priority": 1,
                "entity_types": [
                    {
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "sigbin"
                        },
                        "max_dist": 10,
                        "walk_speed_multiplier": 1.5,
                        "sprint_speed_multiplier": 1.5
                    }
                ]
            },
            "minecraft:behavior.nearest_attackable_target": {
                "priority": 3,
                "within_radius": 24,
                "reselect_targets": true,
                "entity_types": [
                    {
                        "filters": {
                            "all_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "mob"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "operator": "!=",
                                    "value": "headcrabGeneral"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "operator": "!=",
                                    "value": "headcrab_zombie_general"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "operator": "!=",
                                    "value": "monster"
                                }
                            ]
                        },
                        "max_dist": 24
                    },
                    {
                        "filters": {
                            "all_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "player"
                                },
                                {
                                    "test": "is_riding",
                                    "subject": "other",
                                    "value": false
                                }
                            ]
                        },
                        "max_dist": 24
                    }
                ]
            },
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:nameable": {},
            "minecraft:fire_immune": {},
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? Math.Random(3,6) : 0"
            },
            "minecraft:despawn": {
                "despawn_from_distance": {}
            },
            "minecraft:rideable": {
                "seat_count": 1,
                "family_types": [
                  "scorched_headcrab_zombie",
                  "scorchedHeadcrab"
                ],
                "seats": [
                    {
                        "position": [
                            0, 
                            1.7, 
                            0.1
                        ]
                    }
                ]
            },
            "minecraft:addrider": {
                "entity_type": "borgy:scorched_headcrab_hitbox"
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "on_damage": {
                            "filters": {
                                "test": "has_damage",
                                "subject": "self",
                                "value": "fatal"
                            },
                            "event": "borgy:leave_headcrab_behind",
                            "target": "self"
                        }
                    }
                ]
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "borgy:not_in_water"
                    ]
                }
            },
            "borgy:start_sizzling": {
                "add": {
                    "component_groups": [
                        "borgy:in_water"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:not_in_water"
                    ]
                }
            },
            "borgy:stop_sizzling": {
                "add": {
                    "component_groups": [
                        "borgy:not_in_water"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "borgy:in_water"
                    ]
                }
            },
            "borgy:on_unridden": {
                "run_command": {
                    "command": [
                        "replaceitem entity @s slot.weapon.mainhand 0 air",
                        "kill @s"
                    ]
                }
            },
            "borgy:leave_headcrab_behind": {
                "run_command": {
                    "command": [
                        "replaceitem entity @s slot.weapon.mainhand 0 air",
                        "summon borgy:scorched_headcrab"
                    ]
                }
            }
        }
    }
}